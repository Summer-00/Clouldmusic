/* pages/sheetdetail/sheetdetail.wxss */
page{
  background:rgba(0, 0, 0, .8);
}
head{
  position: relative;
  height: 400rpx;
}

.head .pagepic{
width: 260rpx;
height: 260rpx;
padding: 40rpx; 

}
.head .title,.head .playcount{
  color: #fff
}
.head .playcount image{
  width: 30rpx;
  height: 30rpx;
}

.head .details{
  width:35rpx;
  height:35rpx;
  position:absolute;
  top: 260rpx;
  left:260rpx; 
}
.head{
  display: flex;
  justify-content: space-around
}
.head>view{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 400rpx
}
.list-nav{
  display: flex;
  justify-content: space-around

}
.list-nav image{
  width: 100rpx;
  height: 100rpx;
}
.list-container .list{
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(37, 34, 34, 0.5);
  /* opacity: .5 */
}
.list-container .list image{
  width:60rpx;
  height: 60rpx;
}
.list-container .list .index {
color: #fff;
text-align: left;
width: 40rpx;
border: 0;
}
.list-container .list .song{
  width: 500rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  text-align: left;
}
.list-container .list .songname{
  /* width: 500rpx; */

  font-size: 16px;
}
.list-container .list .line-style{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-container .list .singer{
  font-size: 12px;
  color: rgba(100, 95, 95, 0.8)
}